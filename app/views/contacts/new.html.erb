<%= form_for @contact do |form| %>

<div class="control-group<%= @contact.errors[:name].any? ? " error" : "" %> col-sm-12 col-md-10 col-lg-8">
    <%= form.label :name, class: 'control-label'%>
    <div class="controls">
      <%= form.text_field :name, autofocus: true, :maxlength => '50', :class => 'form-control'%>
      <span class="help-inline text-danger">
        <%= @contact.errors[:name].any? ? @contact.errors[:name].to_s[/\w([^"]*)/] : "" %></span>
    </div>
</div>
<br>
<div class="control-group<%= @contact.errors[:email].any? ? " error" : "" %> col-sm-12 col-md-10 col-lg-8">
    <%= form.label :email, class: 'control-label'%>
    <div class="controls">
      <%= form.text_field :email, autofocus: true, :maxlength => '50', :class => 'form-control'%>
      <span class="help-inline text-danger">
        <%= @contact.errors[:email].any? ? @contact.errors[:email].to_s[/\w([^"]*)/] : "" %></span>
    </div>
</div>
<br>
<div class="control-group<%= @contact.errors[:phone].any? ? " error" : "" %> col-sm-12 col-md-10 col-lg-8">
    <%= form.label :phone, class: 'control-label'%>
    <div class="controls">
      <%= form.text_field :phone, autofocus: true, :maxlength => '50', :class => 'form-control'%>
      <span class="help-inline text-danger">
        <%= @contact.errors[:phone].any? ? @contact.errors[:phone].to_s[/\w([^"]*)/] : "" %></span>
    </div>
</div>
<br>
<div class="control-group<%= @contact.errors[:message].any? ? " error" : "" %> col-sm-12 col-md-10 col-lg-8">
    <%= form.label :message, class: 'control-label'%>
    <div class="controls">
      <%= form.text_area :message, autofocus: true, :maxlength => '50', :class => 'form-control'%>
      <span class="help-inline text-danger">
        <%= @contact.errors[:message].any? ? @contact.errors[:message].to_s[/\w([^"]*)/] : "" %></span>
    </div>
</div>
<br>
<div class="actions col-sm-12 col-md-10 col-lg-8">
   <%= form.submit "Enviar", class: 'btn btn-info'%>
</div>
<%end%>